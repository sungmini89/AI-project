# Environment Variables Template
# Copy this file to .env and fill in your values

# ===== 요구사항 필수 환경변수 =====

# 개발 모드 설정
VITE_USE_MOCK_DATA=true

# API 모드 설정 (offline|free|premium)
VITE_API_MODE=offline

# Google Gemini API Key (선택사항, 무료 티어)
VITE_GEMINI_API_KEY=optional

# Hugging Face Token (선택사항)
VITE_HUGGINGFACE_TOKEN=optional

# ===== 애플리케이션 설정 =====

VITE_APP_NAME="Smart Split Calculator"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="OCR 기반 스마트 영수증 분할 계산기"

# ===== OCR 설정 =====

# Tesseract.js 설정
VITE_OCR_WORKER_PATH=/tesseract-worker.js
VITE_OCR_LANG_PATH=/tessdata
VITE_OCR_LANGUAGES=eng+kor
VITE_OCR_CONFIDENCE_THRESHOLD=0.7

# ===== 저장소 설정 (IndexedDB) =====

VITE_STORAGE_DB_NAME=CostSplitCalculator
VITE_STORAGE_VERSION=1
VITE_MAX_STORAGE_SIZE=50000000

# ===== 성능 설정 =====

VITE_MAX_IMAGE_SIZE=10000000
VITE_MAX_IMAGE_WIDTH=2048
VITE_MAX_IMAGE_HEIGHT=2048
VITE_IMAGE_QUALITY=0.8

# ===== API 설정 =====

VITE_API_BASE_URL=https://api.example.com
VITE_API_TIMEOUT=30000

# ===== PWA 설정 =====

VITE_PWA_ENABLED=true
VITE_PWA_OFFLINE_ENABLED=true

# ===== 기능 플래그 =====

VITE_FEATURE_AI_ENHANCEMENT=true
VITE_FEATURE_EXPORT_ENABLED=true
VITE_FEATURE_TEMPLATES_ENABLED=true
VITE_FEATURE_STATISTICS_ENABLED=true

# ===== 개발 설정 =====

VITE_DEV_MODE=false
VITE_ENABLE_DEBUG_LOGS=false

# ===== 분석 도구 (선택사항) =====

VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# ===== 무료 API 제한사항 =====
# Gemini API 무료 티어: 60 requests/minute, 1500 requests/day
# 할당량 초과 시 자동으로 오프라인 모드로 전환됩니다