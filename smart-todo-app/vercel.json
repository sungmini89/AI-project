{
  "build": {
    "env": {
      "VITE_USE_MOCK_DATA": "false",
      "VITE_API_MODE": "production",
      "VITE_HUGGINGFACE_TOKEN": "",
      "VITE_GEMINI_API_KEY": "",
      "VITE_APP_NAME": "Smart Todo App",
      "VITE_APP_VERSION": "1.0.0",
      "VITE_PWA_ENABLED": "true",
      "VITE_PWA_OFFLINE_SUPPORT": "true",
      "VITE_POMODORO_WORK_TIME": "25",
      "VITE_POMODORO_SHORT_BREAK": "5",
      "VITE_POMODORO_LONG_BREAK": "15"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/workbox-:filename.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
