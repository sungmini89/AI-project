# API Mode Configuration (필수)
VITE_API_MODE=offline
VITE_USE_MOCK_DATA=true

# Firebase Configuration (무료 티어)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Translation APIs (선택사항)
VITE_MYMEMORY_API_KEY=optional
VITE_LIBRETRANSLATE_URL=https://libretranslate.com
VITE_HUGGINGFACE_TOKEN=optional

# PWA Configuration
VITE_ENABLE_PWA=true
VITE_APP_NAME=Real-time Translation Chat

# 무료 할당량 관리 (중요: 제한사항 명시)
VITE_MYMEMORY_DAILY_LIMIT=1000
VITE_FIREBASE_MESSAGE_LIMIT=20000
VITE_OFFLINE_MODE_ENABLED=true