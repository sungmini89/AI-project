# AI 일기 앱 환경 변수 설정 예시
# 이 파일을 복사하여 .env 파일을 만들고 필요한 값을 설정하세요

# === 핵심 설정 ===

# 한국어 감정 분석 활성화 (기본: false)
VITE_ENABLE_KOREAN_ANALYSIS=true

# AI 서비스 모드 (mock, free, offline, custom)
VITE_SERVICE_MODE=mock

# === AI API 설정 ===

# OpenAI API 키 (Custom 모드에서 사용)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Claude API 키 (Custom 모드에서 사용)
VITE_CLAUDE_API_KEY=your_claude_api_key_here

# 기타 AI 서비스 키
VITE_API_KEY=your_api_key_here

# === PWA 설정 ===

# PWA 활성화
VITE_PWA_ENABLED=true

# 서비스 워커 캐싱 전략
VITE_SW_CACHE_STRATEGY=NetworkFirst

# === 개발 설정 ===

# 개발 모드 디버그 로깅
VITE_DEBUG_LOGGING=true

# 에러 리포팅
VITE_ERROR_REPORTING=false

# 성능 모니터링
VITE_PERFORMANCE_MONITORING=true

# === 데이터베이스 설정 ===

# IndexedDB 이름 (기본: AIDiaryDB)
VITE_DB_NAME=AIDiaryDB

# 자동 백업 간격 (일)
VITE_AUTO_BACKUP_DAYS=7

# === UI 설정 ===

# 기본 테마 (light, dark, auto)
VITE_DEFAULT_THEME=auto

# 기본 언어 (ko, en)
VITE_DEFAULT_LANGUAGE=ko

# 자동 저장 간격 (밀리초, 기본: 30000)
VITE_AUTO_SAVE_INTERVAL=30000

# === 테스트 설정 ===

# 테스트 환경에서 Mock 데이터 사용
VITE_USE_MOCK_DATA=true

# E2E 테스트 베이스 URL
VITE_TEST_BASE_URL=http://localhost:3000

# === 분석 및 모니터링 ===

# Google Analytics ID (선택사항)
VITE_GA_ID=

# Sentry DSN (에러 추적, 선택사항)
VITE_SENTRY_DSN=

# === 보안 설정 ===

# CSRF 토큰 (프로덕션 환경)
VITE_CSRF_TOKEN=

# 암호화 키 (로컬 데이터 암호화)
VITE_ENCRYPTION_KEY=

# === 성능 설정 ===

# 이미지 압축 품질 (0-100)
VITE_IMAGE_QUALITY=80

# 최대 파일 크기 (MB)
VITE_MAX_FILE_SIZE=10

# 캐시 TTL (초, 기본: 86400)
VITE_CACHE_TTL=86400

# === 접근성 설정 ===

# 고대비 모드 지원
VITE_HIGH_CONTRAST=false

# 스크린 리더 지원 향상
VITE_SCREEN_READER_ENHANCED=true

# 키보드 네비게이션 개선
VITE_KEYBOARD_NAVIGATION_ENHANCED=true

# ==========================================
# 설정 가이드
# ==========================================

# 1. 빠른 시작 (개발용):
#    VITE_SERVICE_MODE=mock
#    VITE_ENABLE_KOREAN_ANALYSIS=true
#    VITE_DEBUG_LOGGING=true

# 2. 프로덕션 설정:
#    VITE_SERVICE_MODE=free
#    VITE_PWA_ENABLED=true
#    VITE_ERROR_REPORTING=true

# 3. AI API 사용 시:
#    VITE_SERVICE_MODE=custom
#    VITE_OPENAI_API_KEY=실제_키_입력
#    또는
#    VITE_CLAUDE_API_KEY=실제_키_입력

# 4. 오프라인 전용:
#    VITE_SERVICE_MODE=offline
#    VITE_PWA_ENABLED=true

# 주의사항:
# - API 키는 절대 공개 저장소에 커밋하지 마세요
# - 프로덕션에서는 환경 변수를 안전하게 관리하세요
# - .env 파일을 .gitignore에 추가하여 보안을 유지하세요