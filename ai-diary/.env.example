# 개발 모드 설정
VITE_USE_MOCK_DATA=true

# API 모드 설정 (offline, free, premium, custom)
VITE_API_MODE=offline

# 선택사항: 외부 AI 서비스 API 키들
# HuggingFace API (무료 제한 있음)
VITE_HUGGINGFACE_TOKEN=

# Google Gemini API (무료 제한 있음)
VITE_GEMINI_API_KEY=

# OpenAI API (유료)
VITE_OPENAI_API_KEY=

# 감정 분석 설정
VITE_ENABLE_KOREAN_ANALYSIS=true
VITE_ENABLE_EMOJI_MAPPING=true

# 앱 설정
VITE_APP_NAME=AI 감정 일기장
VITE_APP_VERSION=1.0.0

# 데이터베이스 설정
VITE_DB_NAME=ai_diary_db
VITE_DB_VERSION=1

# PWA 설정
VITE_PWA_ENABLED=true

# 개발용 설정
VITE_DEBUG_MODE=false
VITE_ENABLE_CONSOLE_LOGS=true

# 감정 분석 임계값 설정 (0.0 ~ 1.0)
VITE_POSITIVE_THRESHOLD=0.1
VITE_NEGATIVE_THRESHOLD=-0.1

# 무료 API 사용량 제한 (일일)
VITE_DAILY_API_LIMIT=100
VITE_MONTHLY_API_LIMIT=1000

# 로컬 저장소 설정
VITE_ENABLE_BACKUP=true
VITE_AUTO_SAVE_INTERVAL=30000

# 언어 설정
VITE_DEFAULT_LANGUAGE=ko
VITE_AVAILABLE_LANGUAGES=ko,en